# ===========================================
# weAlist Backend 설정
# ===========================================

# App name
APP_NAME=weAlist

# Service Ports
USER_SERVICE_PORT=8080

# PostgreSQL 관리자 계정
POSTGRES_SUPERUSER=postgres
POSTGRES_SUPERUSER_PASSWORD=your_secure_superuser_password

# User Service Database
USER_DB_NAME=wealist_user_db
USER_DB_USER=user_service
USER_DB_PASSWORD=user_password

# Kanban Service Database
KANBAN_DB_NAME=wealist_kanban_db
KANBAN_DB_USER=kanban_service
KANBAN_DB_PASSWORD=kanban_password

# 공유 Redis
REDIS_PASSWORD=your_redis_password

# JWT & Secret Keys
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_MS=86400000
JWT_ACCESS_MS=1800000

# JPA/Hibernate 설정 (User Service)
# 주의: 첫 실행 시에는 JPA_DDL_AUTO=update로 설정하여 테이블 생성 후
#       이후 실행부터는 validate로 변경하세요.
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# CORS 설정 (Kanban Service)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081

# ===========================================
# 주의사항:
# 1. 실제 운영 시 모든 비밀번호를 강력한 값으로 변경하세요
# 2. JWT_SECRET은 최소 32자 이상의 랜덤 문자열 사용
# 3. 이 파일을 .env로 복사하여 사용하고, .env 파일은 git에 커밋하지 마세요
# ===========================================
